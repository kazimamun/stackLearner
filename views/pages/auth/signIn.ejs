<%- include ('../../partials/header.ejs') %> 

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class="mb-3">Login to your Account</h4>
                <form action="/auth/signin" method='POST'>
                    <div class="form-group">
                        <label for="email">Enter the Email</label>
                        <input type="email" name="email" id="email" class="form-control <%- error.email ? 'is-invalid' : '' %> ">
                        <div class="invalid-feedback">
                            <%- error.email && error.email %> 
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter a strong password</label>
                        <input type="password" name="password" id="password" class="form-control <%- error.password ? 'is-invalid' : '' %> ">
                        <div class="invalid-feedback">
                            <%- error.password && error.password %> 
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="sign in">                    
                </form>
                <p class="my-3 text-center">Don't have any account? <a href="/auth/signup">Create new one</a></p>
            </div>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %> 

</body>
</html>